# Things to add to path (like this?)
PATH=/bin:/usr/local/bin:$PATH:/usr/bin:/usr/local/bin/google_appengine:$HOME/dotfiles/shell:$HOME/.rvm/bin;

####################
# customizations
####################
# make sure colors show up in iTerm
autoload -U colors
colors
export CLICOLOR=1
export LSCOLORS=dxfxcxdxbxegedabagacad
export TERM=xterm-256color


####################
# git prompt
####################
# load vcs_info module
autoload -Uz vcs_info
zstyle ':vcs_info:*' enable git
zstyle ':vcs_info:git*' formats "%{$fg[cyan]%}(%r)%{$reset_color%}[%{$fg[magenta]%}%b%{$reset_color%}]"

precmd() {
  vcs_info
}
setopt prompt_subst
PROMPT='${vcs_info_msg_0_} %c/ â˜† '


####################
# load external configs
####################
# RVM
source $HOME/.rvm/scripts/rvm
# work vm stuff
source $HOME/reachvm/devvm_setup.sh


